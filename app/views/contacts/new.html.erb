<div class="container text-center mt-5">
	<div class="row">
   <div class="col-md-6 offset-md-3">
  <section class="mb-4">
  <h1 class="page_title">Page contact</h1>
    <p class="text-center w-responsive mx-auto mb-5">Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within
    a matter of hours to help you.
    </p>
    <div class="row">
      <div class="col-md-12 mb-md-0 mb-5">
      <%= form_for @contact do |f| %>
      <div class="row">
        <div class="col-md-6">
        <%= f.label :name, "Votre nom" %><br>
        <%= f.text_field :name, required: true, class:"form-control" %>
        </div>
        <div class="col-md-6">
        <%= f.label :email %><br>
        <%= f.text_field :email, required: true , class:"form-control" %>   
        </div>
        <div class="col-md-12">
        <%= f.label :objet %><br>
        <%= f.text_field :objet, required: true, class:"form-control" %>
        </div>
        <div class="col-md-12">
        <%= f.label :message %>
        <%= f.text_area :message, as: :text , class:"form-control" %>
        </div>

        <div class="text-center text-md-left mt-5">
          
        <%= f.submit 'Send Message', class:"btn btn-primary" %>
        </div>
      </div>

      <% end %>
      </div>
    </div>  
  </section>
   </div> 
  </div>
</div>
