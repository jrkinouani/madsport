  <div class="contact-section">
      <div class="container">
        <div class="row">
            <h1 class="page_title text-center">Page contact</h1>
              <p class="text-center">Do you have any questions? Please do not hesitate to contact us directly. <br>Our team will come back to you within
              a matter of hours to help you.
              </p>
          <div class="col-lg-6 offset-lg-3 col-md-10 col-md-offset-2 col-sm-10 offset-sm-1" id="contact_content">
            <%= form_for @contact do |f| %>
              <div class="form-group">
                <%= f.label :name, "Votre nom", class:"label" %><br>
                <%= f.text_field :name, required: true, class:"form-control" %>
                <!-- <label for="exampleInputName2">Name</label>
                <input type="text" class="form-control" id="exampleInputName2" placeholder="Jane Doe"> -->
              </div>
              <div class="form-group">
                <%= f.label :email, class:"label" %><br>
                <%= f.text_field :email, required: true , class:"form-control" %> 
                <!-- <label for="exampleInputEmail2">Email</label>
                <input type="email" class="form-control" id="exampleInputEmail2" placeholder="jane.doe@example.com"> -->
              </div>
              <div class="form-group">
                <%= f.label :objet , class:"label"%><br>
                <%= f.text_field :objet, required: true, class:"form-control" %>
              </div>
              <div class="form-group ">
                <%= f.label :message, class:"label" %>
                <%= f.text_area :message, as: :text , class:"form-control" %>
                <!-- <label for="exampleInputText">Your Message</label>
               <textarea  class="form-control" placeholder="Description"></textarea>  -->
              </div>
              <%= f.submit 'Envoyez votre message', class:"btn btn-primary mt-3" %>
            <% end %>
          </div>
        </div>
      </div>
  </div>

